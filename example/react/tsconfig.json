{
  "compilerOptions": {
    "checkJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "noUnusedLocals": false,
    "noUnusedParameters": true
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    ".umirc.js",
    "typings.d.ts"
  ],
  "exclude": ["node_modules"]
}
